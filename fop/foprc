# get fedora/RHEL to load the jar via the CLASSPATH var
FOP_VERSION="offo-hyphenation-binary_v2.0"

# Need to force loading of xml-apis-ext.jar from http://xerces.apache.org/mirrors.cgi
CP=$HOME/config/fop/fop-hyph.jar:/usr/share/java/xml-apis-ext.jar
if [ -n "$CLASSPATH" ]; then
    CLASSPATH=$CLASSPATH:$CP
else
    CLASSPATH=$CP
fi
