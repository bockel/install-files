
export DE=xfce

# Start thunar for pnp usb support
thunar --daemon &
xfce4-power-manager &
#
# Start the pulse audio subsystem
pulseaudio --start
eval `gnome-keyring-daemon --start --components=pksc11,secrets,ssh,gpg`
export GPG_AGENT_INFO
export GNOME_KEYRING_CONTROL
export GNOME_KEYRING_PID
export SSH_AUTH_SOCK

while true; do
	xsetroot -name "$(acpi -b | cut -d, -s -f2) | $( date +"%F %R" )"
	sleep 1m
done &
xmodmap ~/.Xmodmap
# Start urxvt daemon, allows for faster urxvt-client connections and reduced memory footprint
urxvtd -q -o -f

wmname LG3D
while true; do
	dwm || exit
done
