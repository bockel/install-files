
# Start thunar for pnp usb support
thunar --daemon &
xfce4-power-manager &
#
# Start the pulse audio subsystem
pulseaudio --start

while true; do
	xsetroot -name "$(acpi -b | cut -d, -s -f2) | $( date +"%F %R" )"
	sleep 1m
done &
xmodmap ~/.Xmodmap
# Start urxvt daemon, allows for faster urxvt-client connections and reduced memory footprint
urxvtd -q -o -f

wmname LG3D
while true; do
	dwm || exit
done
